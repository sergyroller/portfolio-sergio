---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;500;700&display=swap">
		<title>{title}</title>
	</head>
	<body class="max-w-4xl mx-auto p-4 md:shadow-lg">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--font-color:#333;
	}

	body {
		color:var(--font-color);
		font-family: 'Lato', sans-serif;
	}


</style>
